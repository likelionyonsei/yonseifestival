    <div class="panel" style="margin-top:10px; border-color:#47b8e0;">
        <div class="panel-heading" style="border-color:#47b8e0; background-color:#47b8e0"><p style="font-size:2rem; text-align:center; color:white;">공연 소개</p></div>
        <div class="panel-body">          
            <div class="row">
                <div class="col-md-4">    
                    <div style="margin-left:10px;">
                       <%= image_tag @oneperform.imagefile, class:"img-responsive img-thumbnail", :alt=>" ", :style=>"width:330px;"%>
                    </div>
                </div>
                <div class="col-md-8">
                    <br><br>
       <!-- LikeBtn.com BEGIN -->
                    <span class="likebtn-wrapper" data-theme="disk" data-i18n_like="이 공연 추천!" data-identifier="<%=@oneperform.id%>" data-dislike_enabled="false" data-icon_dislike_show="false" data-site_id="573815d19b1d1b0e487d6e0a" data-i18n_after_like="추천되었어요!" data-i18n_like_tooltip="추천하기♥" data-i18n_unlike_tooltip="추천취소하기ㅠㅠ"></span>
                    <br></br>
                    <span class="label label-default" style="background-color:#A288B3">공연이름</span> <%=@oneperform.name%><br>
                    <span class="label label-default" style="background-color:#A288B3">시간</span> <%=@oneperform.time_hour%>시 <%=@oneperform.time_min%>분<br>
                    <span class="label label-default" style="background-color:#A288B3">위치</span> <%=@oneperform.at%> <br>
                    <span class="label label-default" style="background-color:#A288B3">공연소개</span>
                    <%=@oneperform.intro%><br>
                    <span class="label label-default" style="background-color:#A288B3">플레이리스트</span><br>
                    <%=@oneperform.list%><br>
                     
                </div>
            </div>
         </div>
    </div>
    <div class="panel" style="border-color:#47b8e0;">
        <div class="panel-heading" style="border-color:#47b8e0; background-color:#47b8e0"><p style="font-size:2rem; text-align:center; color:white;">댓글</p></div>
        <div class="panel-body" style="padding-left:30px; padding-right:30px">          
            <div class="row">
                <div class="list-group">
                    <% @oneperform.performreplies.each do |r| %>
                    <a href="#" class="list-group-item">
                        <span class="badge"><%=r.nickname%></span>
                        <i class="fa fa-fw fa-calendar"><%=r.content%></i>
                    </a>
                    <% end %>
                </div>
                <div class="text-right">
                    <a href="#">댓글 더보기 <i class="fa fa-arrow-circle-right"></i></a>
                </div>
                <form class="form-inline" action="/reply_perform" method="POST">
                    <div class="container-fluid">
                       <div class="row">
                           <input type="hidden" value = "<%=@oneperform.id%>" name = "perform_id"> 
                           <div class="form-group">
                             <label>닉네임</label>
                             <input name="nickname" type="text" class="form-control"  placeholder="이름">
                           </div>
                           <div class="form-group">
                             <label>내용</label>
                             <input name="content" type="text" class="form-control" id="exampleInputEmail2" placeholder="댓글 내용">
                           </div>
                           <button type="submit" class="btn btn-default">쓰기</button>
                        </div>
                     </div>
                </form>
            </div>
       </div>    
   </div>
