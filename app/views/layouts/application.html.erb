  <!--  Top scroller  -->
  
  <style>
      div.a {
        margin: auto;
      }
      
      a.top {
        position: fixed;
        right: 10px;
        bottom: 20px;
        display: none;
      }
    </style>
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script>
      $( document ).ready( function() {
        $( window ).scroll( function() {
          if ( $( this ).scrollTop() > 200 ) {
            $( '.top' ).fadeIn();
          } 
          else {
            $( '.top' ).fadeOut();
          }
        } );
        $( '.top' ).click( function() {
          $( 'html, body' ).animate( { scrollTop : 0 }, 400 );
          return false;
        } );
      } );
    </script>
    
    <!--  Top scroller end -->
  

